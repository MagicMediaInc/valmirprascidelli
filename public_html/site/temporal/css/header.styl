@import "../fonts/helvetica/helvetica.css"

.menu, header
	background-color #fff
.menu-header li
	display inline-block
	a
		font-family "Arial"
		color #000
		font-size 1.1em
		text-decoration none
		display block
		border-bottom 5px solid #f1f2f2
		height 30px
		padding 0 5px
		margin-right 5px
		&:hover
			border-bottom 5px solid #ffcb05
			color #c52d16
		&.active
			border-bottom 5px solid #ffcb05
			color #c52d16